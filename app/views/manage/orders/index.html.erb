<%= stylesheet_link_tag    'manage/application', media: 'all' %>
<div class="orders_wrapper">
  <h1>Заказы</h1>
  <table>
    <thead>
      <th>e - mail</th>
      <th>Адрес</th>
      <th>Статус платежа</th>
    </thead>
    <tbody>
      <% @orders.each do |order|  %>
        <tr>
          <td><%= order.email %></td>
          <td><%= order.address%></td>
          <td><%= order.payment_status%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
